  <script>
    // Небольшая валидация и создание mailto-сообщения как запасной вариант:
    function handleSubmit(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const email = document.getElementById('email').value.trim();
      const subject = document.getElementById('subject').value.trim() || 'Запрос с сайта';
      const message = document.getElementById('message').value.trim();

      if(!name || !phone || !email || !message){
        alert('Пожалуйста, заполните все обязательные поля.');
        return false;
      }

      // Попытка открыть почтовый клиент пользователя:
      const to = '{{email@example.com}}'; // замените на свой e-mail
      const body = encodeURIComponent(
        `Имя/Компания: ${name}\nТелефон: ${phone}\nE-mail: ${email}\n\n${message}`
      );
      const mailto = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${body}`;
      // открываем mail client
      window.location.href = mailto;

      // Также можно отправить форму на сервер — но сейчас шаблон без бэкенда.
      return false;
    }

    // Небольшой полевой формат телефона (очень простой)
    document.getElementById('phone').addEventListener('input', function(e){
      // простой фильтр: оставляем цифры и "+"
      this.value = this.value.replace(/[^\d\+]/g,'');
    });
  </script>
